<UserControl x:Class="CsIRC.MessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:CsIRC"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox x:Name="_messageTextBox" TextWrapping="Wrap" KeyDown="_messageTextBox_KeyDown" Margin="0,277,0,0" VerticalAlignment="Bottom" />
        <TextBox x:Name="_conversationTextBox" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" Margin="0,18" />
        <TextBox x:Name="_topicTextBox" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,0,0,277" IsReadOnly="True" />
    </Grid>
</UserControl>
